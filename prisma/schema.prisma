// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Playbook {
  id          String      @id @default(uuid())
  title       String
  author      String
  year        Int?
  genre       String?
  description String?
  coverImage  String?
  llmSourceId String?     @db.VarChar(64) // LLM-generated ID for audit/debug only

  characters  Character[]
  acts        Act[]
  userCharacterProgress UserCharacterProgress[]
  userLineProgress UserLineProgress[]

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([title])
  @@index([author])
}

model Character {
  id             String   @id @default(uuid())
  name           String
  description    String?
  llmSourceId    String?  @db.VarChar(64) // LLM-generated ID for audit/debug only
  isFavorite     Boolean  @default(false)
  lastSelected   Boolean  @default(false)
  completionRate Float    @default(0)

  playbookId     String
  playbook       Playbook @relation(fields: [playbookId], references: [id], onDelete: Cascade)

  lines          LineCharacter[]
  userCharacterProgress UserCharacterProgress[]
  userLineProgress UserLineProgress[]

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([playbookId])
  @@index([name])
}

model Act {
  id         String   @id @default(uuid())
  title      String
  order      Int      @default(0)
  llmSourceId String? @db.VarChar(64) // LLM-generated ID for audit/debug only

  playbookId String
  playbook   Playbook @relation(fields: [playbookId], references: [id], onDelete: Cascade)

  scenes     Scene[]

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([playbookId])
  @@index([playbookId, order])
}

model Scene {
  id        String   @id @default(uuid())
  title     String
  order     Int      @default(0)
  llmSourceId String? @db.VarChar(64) // LLM-generated ID for audit/debug only

  actId     String
  act       Act      @relation(fields: [actId], references: [id], onDelete: Cascade)

  lines     Line[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([actId])
  @@index([actId, order])
}

model Line {
  id                String           @id @default(uuid())
  text              String           @db.Text
  type              LineType
  order             Int              @default(0)
  llmSourceId       String?          @db.VarChar(64) // LLM-generated ID for audit/debug only

  // Formatting metadata (optional)
  indentLevel       Int?
  preserveLineBreaks Boolean?

  sceneId           String
  scene             Scene            @relation(fields: [sceneId], references: [id], onDelete: Cascade)

  // Multi-character attribution via join table
  characters        LineCharacter[]
  userProgress      UserLineProgress[]

  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  @@index([sceneId])
  @@index([sceneId, order])
  @@index([type])
}
// Temporary play storage for incomplete/error states
model PlayTemp {
  id          String      @id @default(uuid())
  title       String
  author      String?
  year        Int?
  genre       String?
  description String?
  llmSourceId String?     @db.VarChar(64)
  rawJson     Json        // Raw LLM output for debug/recovery
  errorMsg    String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// Join table for many-to-many relationship between Lines and Characters
model LineCharacter {
  lineId      String
  line        Line      @relation(fields: [lineId], references: [id], onDelete: Cascade)
  
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  order       Int       @default(0) // Order of character in multi-speaker line
  
  createdAt   DateTime  @default(now())
  
  @@id([lineId, characterId])
  @@index([lineId])
  @@index([characterId])
}


model UserCharacterProgress {
  id             String       @id @default(uuid())
  
  // User identification (placeholder for future auth)
  userId         String       @default("default-user") // Will be replaced with actual user ID when auth is implemented
  
  // Character reference
  characterId    String
  character      Character    @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  // Play reference for easier querying
  playbookId     String
  playbook       Playbook     @relation(fields: [playbookId], references: [id], onDelete: Cascade)
  
  // Practice metrics
  totalLines     Int          @default(0)     // Total number of lines for the character
  masteredLines Int          @default(0)     // Number of lines mastered
  
  // Timestamps
  firstPracticedAt DateTime   @default(now())
  lastPracticedAt  DateTime   @updatedAt
  
  @@unique([userId, characterId])
  @@index([userId])
  @@index([characterId])
  @@index([playbookId])
  @@index([userId, playbookId])
}


// User practice progress tracking for individual lines
model UserLineProgress {
  id             String       @id @default(uuid())
  
  // User identification (placeholder for future auth)
  userId         String       @default("default-user") // Will be replaced with actual user ID when auth is implemented
  
  // Line reference
  lineId         String
  line           Line         @relation(fields: [lineId], references: [id], onDelete: Cascade)
  
  // Character being practiced
  characterId    String
  character      Character    @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  // Play reference for easier querying
  playbookId     String
  playbook       Playbook     @relation(fields: [playbookId], references: [id], onDelete: Cascade)
  
  // Practice metrics
  rehearsalCount Int          @default(0)     // Number of times the line was rehearsed
  hintCount      Int          @default(0)     // Number of times user asked for a hint
  progressPercent Int         @default(0)     // Progress percentage (0-100)
  
  // Timestamps
  firstPracticedAt DateTime   @default(now())
  lastPracticedAt  DateTime   @updatedAt
  
  @@unique([userId, lineId, characterId])
  @@index([userId])
  @@index([lineId])
  @@index([characterId])
  @@index([playbookId])
  @@index([userId, playbookId])
  @@index([userId, characterId])
}

enum LineType {
  dialogue
  stage_direction
}
